generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  fullName String
  email    String @unique
  cpf      String @unique

  password  String
  Equipment Equipment[]

  @@map(name: "users")
}

model Equipment {
  id String @id @default(uuid())

  equipmentName String
  stock         Int

  creator   User   @relation(fields: [creatorId], references: [id])
  creatorId String

  @@map(name: "equipments")
}
